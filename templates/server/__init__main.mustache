from {{packageName}} import encoder
from {{packageName}}.config import DefaultSettings
from {{packageName}}.database.database import init_db


def create_app():
    app = connexion.App(__name__, specification_dir='./openapi/')
    app.app.config.from_object('{{packageName}}.config.DefaultSettings')
    if "OPENAPISERVER_SETTINGS" in os.environ:
        app.app.config.from_envvar('OPENAPISERVER_SETTINGS')
    app.app.json_encoder = encoder.JSONEncoder
    init_db(app.app)
    app.add_api('openapi.yaml',
                arguments={'title': '{{appName}}'},
                pythonic_params=True)

{{#featureCORS}}
    # add CORS support
    CORS(app.app)

{{/featureCORS}}
    return app.app
